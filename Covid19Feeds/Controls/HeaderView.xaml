                        <!--<Image  IsAnimationPlaying="True" HeightRequest="50" WidthRequest="50">
                            <Image.Source>
                                <ch
                            </Image.Source>
                            </Image>-->
                        <Label x:Name="label"  Style="{StaticResource PageTileLabel}"  HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White" FontSize="Large" FontAttributes="Bold"></Label>
                    </StackLayout>
                </yummy:PancakeView>
    </ContentView.Content>
</ContentView>
